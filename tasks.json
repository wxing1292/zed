[
  {
    "label": "compile",
    "command": "sh",
    "args": ["-lc", "make -k"],
    "reveal": "always",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
  },
  {
    "label": "cargo build",
    "command": "cargo",
    "args": ["build"],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo run",
    "command": "cargo",
    "args": ["run"],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo test",
    "command": "cargo",
    "args": ["test", "--", "--no-capture", "--show-output"],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo bench",
    "command": "cargo",
    "args": ["bench"],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo check",
    "command": "cargo",
    "args": ["check"],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo fmt",
    "command": "cargo",
    "args": ["+nightly", "fmt"],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo clippy",
    "command": "cargo",
    "args": [
      "+nightly",
      "clippy",
      "--all-targets",
      "--all-features",
      "--",
      "-D",
      "warnings",
    ],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo clippy (fix)",
    "command": "cargo",
    "args": [
      "+nightly",
      "clippy",
      "--fix",
      "--all-targets",
      "--all-features",
      "--allow-dirty",
      "--allow-staged",
    ],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo clean",
    "command": "cargo",
    "args": ["clean"],
    "reveal": "always",
    "use_new_terminal": false,
  },
  {
    "label": "cargo doc",
    "command": "cargo",
    "args": ["doc", "--open"],
    "reveal": "always",
    "use_new_terminal": false,
  },
]
